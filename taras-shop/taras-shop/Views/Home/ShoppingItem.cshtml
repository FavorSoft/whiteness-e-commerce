@model IEnumerable<DTO.Helpers.BasketUnit>

<div class="table-responsive">
    <table class="table cart-table">
        <thead>
            <tr>
                <th>Товар</th>
                <th>Подробности</th>
                <th>Количество</th>
                <th>Цена</th>
                <th>Сумма</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var i in Model)
            {
            <tr>
                <td>
                    <img src="@Url.Content("~/Content/images/Units/" + i.Image.Image)" />
                </td>
                <td>
                    <div class="text-basket-preview">
                        <h4>@i.Title</h4>
                        <span>Цвет: @i.Color</span>
                        <span>Размер:</span>
                        <span>@i.Size</span>
                    </div>
                </td>
                <td>
                    <div id="cart-dropdown" class="dropdown">
                        <button class="btn dropdown-toggle"
                                type="button" data-toggle="dropdown">
                            1
                            <span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu">
                            <li><a href="#">1</a></li>
                            <li><a href="#">2</a></li>
                            <li><a href="#">3</a></li>
                            <li><a href="#">4</a></li>
                            <li><a href="#">5</a></li>
                            <li><a href="#">6</a></li>
                            <li><a href="#">7</a></li>
                            <li><a href="#">8</a></li>
                            <li><a href="#">9</a></li>
                            <li><a href="#">10</a></li>
                        </ul>
                    </div>
                </td>
                <td>
                    <p class="cart-price-p">@(String.Format("{0:F2}", Convert.ToDouble(i.Price.GetValueOrDefault(0)) / 100)) грн</p>
                </td>
                <td>
                    <p class="cart-sum-p">@(String.Format("{0:F2}", Convert.ToDouble(i.Price.GetValueOrDefault(0)) * i.AmountOnBasket / 100)) грн</p>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
<div class="text-basket-preview-right">
    <div class="col-md-4 col-md-offset-4 cart-sum-block">
        <div class="overall-cost">
            <span>Общая стоимость товаров: </span>
            <span class="basket-preview-prices">234.85 грн</span>
        </div>
        <div class="delivery-cost">
            <span>Доставка: </span>
            <span class="basket-preview-prices">30.00 грн</span>
        </div>
        <div class="main-prices">
            <h4 class="basket-sum">Сумма: </h4>
            <span class="basket-preview-prices">264.85 грн</span>
        </div>
        <button class="frequent-button buy-button">Оформить заказ</button>
        <button class="frequent-button">Продолжить покупки</button>
    </div>
</div>
