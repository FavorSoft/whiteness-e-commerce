@model taras_shop.Models.RegisterModel

<div id="reg-tab" class="tab-pane fade">
    @using (Html.BeginForm("Registration", "Account",
                                        FormMethod.Post, new { @class = "col-md-6 col-sm-8 col-sm-offset-2 col-md-offset-3 login-block" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        <div class="form-group">
            @Html.LabelFor(model => model.Email)
            @Html.EditorFor(model => model.Email, new { @class = "login-email-input" })
            @Html.ValidationMessageFor(model => model.Email)
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Firstname)
            @Html.EditorFor(model => model.Firstname, new { @class = "reg-name-input" })
            @Html.ValidationMessageFor(model => model.Firstname)
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Surname)
            @Html.EditorFor(model => model.Surname, new { @class = "reg-surname-input" })
            @Html.ValidationMessageFor(model => model.Surname)
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Password)
            @Html.EditorFor(model => model.Password, new { @class = "reg-pass-input" })
            @Html.ValidationMessageFor(model => model.Password)
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.ConfirmPassword)
            @Html.EditorFor(model => model.ConfirmPassword, new { @class = "reg-pass-input" })
            @Html.ValidationMessageFor(model => model.ConfirmPassword)
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Number)
            @Html.EditorFor(model => model.Number, new { @class = "reg-phone-input" })
            @Html.ValidationMessageFor(model => model.Number)
        </div>
        @Html.Hidden("Sex", new { @value="male"})
        <ul class="radio-list">
            <li class="man-li">
                <input type="radio" checked id="Male" name="selector">
                <label id="male-radio" for="Male">Мужчина</label>
                <div class="check"></div>
            </li>
            <li class="woman-li">
                <input type="radio" id="Female" name="selector">
                <label id="female-radio" for="Female">Женщина</label>
                <div class="check"><div class="inside"></div></div>
            </li>
        </ul>
            <button type="submit" class="frequent-button submit-reg">Создать аккаунт</button>
            <div class="line"></div>
            <button type="submit" class="frequent-button facebook-reg">Регистрация с помощью Facebook</button>
            <a href="#" class="forgot-pass">Забыли пароль?</a>
    }
</div>
