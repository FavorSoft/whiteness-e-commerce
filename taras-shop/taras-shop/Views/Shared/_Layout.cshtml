<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My ASP.NET Application</title>
    @Styles.Render("~/bundles/styles")
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
</head>
<body>
    <section class="header">
        <nav class="navbar navbar-default">
            <div class="container">
                <div class="navbar-header">
                    <a class="navbar-brand" href="/">
                        <img src="~/Content/images/lorem.jpg" alt="Logo" class="logo">
                    </a>
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>
                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                    <ul class="nav navbar-nav nav-left">
                        <li><a href="/">Головна</a></li>
                        <li><a href="#">Вона</a></li>
                        <li><a href="#">Він</a></li>
                        <li><a href="#">Діти</a></li>
                        <li><a href="#">Новинки</a></li>
                        <li><a href="#">SALE</a></li>
                    </ul>
                    @Html.Partial("_LoginPartial")
                </div>
                </div>
        </nav>
    </section>

    <div class="body-content">

        @RenderBody()

        <!--Registration & Login modal-->
        <div class="modal fade" id="registration-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
            <div class="container">
                <div class="row">
                    <div class="col-md-10 col-sm-10 col-sm-offset-1 col-md-offset-1">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <div type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></div>
                                </div>
                                <div class="modal-body">
                                    <ul class="nav nav-tabs">
                                        <li class="active"><a data-toggle="tab" href="#sign-in-tab">Войти</a></li>
                                        <li><a data-toggle="tab" href="#reg-tab">Регистрация</a></li>
                                    </ul>

                                    <div class="tab-content">
                                        
                                        @{Html.RenderPartial("Login", new ViewDataDictionary());}
                                        @{Html.RenderPartial("Registration", new ViewDataDictionary());}
                                    </div>
                                </div>
                                <div class="modal-footer">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!--Basket modal-->
        @Html.Partial("Basket")

        <!--Item-preview modal-->
        @Html.Partial("ItemPreview")

        <footer>
            <div class="subscribe">
                <div class="container">
                    <div class="row">
                        <div class="col-md-8 col-lg-6 input-block">
                            <form>
                                <div class="form-group">
                                    <input type="email" class="form-control" id="footer-input" placeholder="E-MAIL...">
                                    <button type="submit" class="footer-btn">Subscribe</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <div class="container">
                <div class="row">
                    <div class="col-md-12 social-block">
                        <a href="#">
                            <div class="icon-facebook"></div>
                        </a>
                        <a href="#">
                            <div class="icon-instagram"></div>
                        </a>
                        <a href="#">
                            <div class="icon-vkontakte"></div>
                        </a>
                        <a href="#">
                            <div class="icon-youtube"></div>
                        </a>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 contacts">
                        <div class="col-md-6 num-block">
                            <span class="material-icons">headset_mic</span>
                            <p class="number">+38 097 777 888<br /> +38 095 555 333</p>
                        </div>
                        <div class="col-md-6 email-block">
                            <span class="material-icons">email</span>
                            <span class="footer-email">NASHEMAIL@GMAIL.COM</span>
                        </div>
                    </div>
                    <div class="col-md-12 last-footer">
                        <span>Интернет-магазин нижнего белья Lorem.ua @DateTime.Now.Year</span>
                        <span>Copyright © Lorem.ua. Создано FavorSoft</span>
                    </div>
                </div>
            </div>
        </footer>
    </div>
    @Scripts.Render("~/bundles/scripts")
    <script src="http://code.jquery.com/ui/1.11.4/jquery-ui.min.js"
            integrity="sha256-xNjb53/rY+WmG+4L6tTl9m6PpqknWZvRt0rO1SRnJzw="
            crossorigin="anonymous"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/remarkable/1.7.1/remarkable.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/react/15.3.2/react.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/react/15.3.2/react-dom.js"></script>
    
    @Scripts.Render("~/bundles/bundle")
</body>
</html>
