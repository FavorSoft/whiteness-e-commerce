@using taras_shop.Controllers;
@if (User.Identity.IsAuthenticated)
{
    <ul class="nav navbar-nav navbar-right">
        @if ((User).IsInRole("Admin"))
        {
        <li><a href="#">Вона</a></li>
        <li><a href="#">Він</a></li>
        }

        <li>
            <form action="/account/logoff" method="get">
                <img src="~/Content/images/register.jpg" alt="sign">
                <button type="submit">Выход</button>
            </form>
        </li>
    </ul>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>
            <a href="" class="sign-in" data-toggle="modal" data-target="#registration-modal">
                <img src="~/Content/images/register.jpg" alt="sign">
                <span>Ввійти</span>
            </a>
        </li>
        <li>
            <a href="Home/ShoppingCart" class="basket">
                <img src="~/Content/images/basket.jpg" alt="basket">
                <span>Корзина</span>
            </a>
        </li>
        <li>
            <input placeholder="Поиск товаров по каталогу" class="search-input" />
            <a href="#" class="search">
                <img src="~/Content/images/search.jpg" alt="search">
                <span>Пошук</span>
            </a>
        </li>
    </ul>
}
