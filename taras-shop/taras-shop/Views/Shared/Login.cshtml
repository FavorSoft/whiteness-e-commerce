@model taras_shop.Models.LoginModel
<div id="sign-in-tab" class="tab-pane fade in active">

    @using (Ajax.BeginForm("Login","Account", "",
                    new AjaxOptions { HttpMethod = "Post", UpdateTargetId = "login-result" }, new { @id = "login-form",@class = "col-md-6 col-sm-8 col-sm-offset-2 col-md-offset-3 login-block" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        <div class="form-group">
            @Html.LabelFor(model => model.Email, new { @class = "login-email-label" })
            @Html.EditorFor(model => model.Email, new { @class = "reg-name-input" })
            @Html.ValidationMessageFor(model => model.Email)
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Password, new { @class = "pass-email-label" })
            @Html.EditorFor(model => model.Password, new { @class = "pass-email-input" })
            @Html.ValidationMessageFor(model => model.Password)
        </div>
        
        <div id="login-result"></div>

        <button type="submit" class="frequent-button submit-log">Войти</button>
        <a href="#" class="forgot-pass">Забыли пароль?</a>
    }
</div>
